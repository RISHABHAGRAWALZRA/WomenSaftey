<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/swip"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/paswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword" />

        <ProgressBar
        android:id="@+id/lodg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        />
    <EditText
        android:id="@+id/grdnam1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name1"
        />
    <EditText
        android:id="@+id/grdcont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contact1"
        android:inputType="text|phone" />
    <EditText
        android:id="@+id/grdnam2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name2"
        />
    <EditText
        android:id="@+id/grdcont2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contact2"
        android:inputType="text|phone" />
    <EditText
        android:id="@+id/grdnam3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name3"
        />
    <EditText
        android:id="@+id/grdcont3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="contact3"
        android:inputType="text|phone" />

        <Button
            android:id="@+id/sgnbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup" />

        <Button
            android:id="@+id/lgnbck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login" />

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>